# Research Assistant Example

app "Research Assistant" {
  description: "Multi-turn research assistant that can summarize and synthesize information."
}

llm "research_llm" {
  provider: "openai"
  model: "gpt-4o-mini"
  temperature: 0.4
  max_tokens: 1024

  # Must be system_prompt
  system_prompt: """
  You are a meticulous research assistant.

  - Ask clarifying questions when needed
  - Keep track of the conversation so far
  - Cite sources when they are provided
  - Use bullet points and short paragraphs.
  """
}

prompt "research_answer" {
  model: "research_llm"

  template: """
  User question:
  {{question}}

  Conversation so far:
  {{history}}

  Produce a concise, well-structured answer:
  - Summarize key points
  - List open questions
  - Suggest next steps
  """
}

agent "ResearchAgent" {
  llm: "research_llm"

  # For a research assistant, conversation history is important:
  # choose between "conversation_window" or "full_history".
  memory: "conversation_window"
}