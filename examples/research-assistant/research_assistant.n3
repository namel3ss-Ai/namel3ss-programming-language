# Research Assistant
# Multi-step research workflow with information gathering and synthesis

app "Research Assistant" {
  description: "AI research assistant for information gathering and analysis"
}

# LLM for research tasks
llm "research_model" {
  provider: "openai"
  model: "gpt-4o"
  temperature: 0.2
}

# Memory for research context
memory "research_session" {
  scope: "session"
  kind: "conversation"
  max_items: 30
}

# Research planning prompt
prompt "research_planner" {
  model: "research_model"
  template: """
You are a research planning expert. Create a structured research plan for this request.

Research Request: {{research_question}}
Available Resources: {{resources}}

Create a research plan with:
1. Key research objectives
2. Information sources to investigate
3. Specific questions to answer
4. Expected deliverables
5. Success criteria

Provide a structured, actionable research plan.
"""
}

# Information synthesis prompt
prompt "synthesize_findings" {
  model: "research_model"
  template: """
You are a research analyst. Synthesize the gathered information into a comprehensive report.

Research Question: {{original_question}}
Gathered Information: {{findings}}
Sources: {{sources}}

Provide a comprehensive research report with:
1. Executive Summary
2. Key Findings
3. Supporting Evidence
4. Conclusions and Recommendations
5. Areas for Further Research

Cite sources appropriately and maintain objectivity.
"""
}

# Research assistant agent
agent "researcher" {
  description: "AI research assistant for comprehensive information analysis"
  llm: "research_model"
  memory: research_session
  system: "You are a professional research analyst skilled at gathering, analyzing, and synthesizing information from multiple sources."
}