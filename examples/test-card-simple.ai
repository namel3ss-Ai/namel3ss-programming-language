# Simple Card Test
# Test basic show card parsing

dataset test_data:
  fields:
    - id: int
    - title: text
    - status: text

page test_page:
  path: "/test"
  title: "Test Card"
  
  show card "Test Items" from dataset test_data:
    empty_state:
      icon: inbox
      title: "No items"
      message: "There are no items to display."
    
    item:
      type: card
      
      header:
        badges:
          - field: status
            transform: humanize
      
      sections:
        - type: info_grid
          columns: 2
          items:
            - icon: tag
              label: "Title"
              values:
                - field: title
      
      actions:
        - label: "View"
          icon: eye
          action: view_item
          params: "{{ id }}"
