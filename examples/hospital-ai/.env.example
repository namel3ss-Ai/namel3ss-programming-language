# ===========================================
# Hospital Support AI - Environment Configuration
# ===========================================

# -------------------------------------------
# Model Provider Configuration
# -------------------------------------------
# Options: 'local' (Ollama), 'openai', 'anthropic'
MODEL_PROVIDER=local

# Local model configuration (Ollama)
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=llama3.1:8b

# Cloud provider API keys (optional, for fallback)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hospital_ai
VECTOR_DB_URL=postgresql://postgres:postgres@localhost:5432/hospital_ai_vectors

# -------------------------------------------
# RAG & Embedding Configuration
# -------------------------------------------
# Embedding provider: 'local' (Ollama) or 'openai'
EMBEDDING_MODEL=local
EMBEDDING_MODEL_NAME=nomic-embed-text

# Enable reranking for better retrieval quality
RERANKER_ENABLED=true

# -------------------------------------------
# Security Configuration
# -------------------------------------------
# IMPORTANT: Change this in production!
JWT_SECRET=your-secret-key-change-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Require HTTPS in production
REQUIRE_HTTPS=false

# Session timeout in seconds (3600 = 1 hour)
SESSION_TIMEOUT=3600

# -------------------------------------------
# Application Settings
# -------------------------------------------
# Server port
PORT=8000

# Environment: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -------------------------------------------
# Optional: Email Configuration
# (for appointment reminders, etc.)
# -------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@hospital-ai.example.com

# -------------------------------------------
# Optional: Monitoring & Analytics
# -------------------------------------------
ENABLE_ANALYTICS=false
SENTRY_DSN=

# -------------------------------------------
# Optional: External Integrations
# -------------------------------------------
# EHR API endpoint (if integrating with existing system)
EHR_API_URL=
EHR_API_KEY=

# Scheduling system API
SCHEDULING_API_URL=
SCHEDULING_API_KEY=
