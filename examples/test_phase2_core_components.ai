app "EducationPlatformPhase2" {
    description: "Phase 2 - Core Components Test Suite"
}

# Phase 2 Core Components Testing
# This file validates form, chart, data_table, and evaluation_result components

dataset students from table students
dataset quizzes from table quizzes
dataset submissions from table submissions
dataset analytics from table analytics

# Test 1: Form Component - Quiz Creation Form
page "Quiz Creator" at "/create" {
    show form {
        title: "Create New Quiz"
        submit_label: "Create"
    }
}

# Test 2: Data Table Component - Student Roster
page "Student Roster" at "/students" {
    show data_table {
        source: students
        sortable: true
        filterable: true
    }
}

# Test 3: Chart Component - Performance Analytics
page "Analytics Dashboard" at "/analytics" {
    show chart {
        type: "bar"
        title: "Quiz Performance"
        data_source: analytics
    }
}

# Test 4: Multiple Components - Dashboard
page "Dashboard" at "/dashboard" {
    show text {
        content: "Welcome"
        size: "large"
    }
    
    show chart {
        type: "line"
        title: "Trends"
    }
    
    show data_table {
        source: students
    }
    
    show form {
        title: "Search"
    }
}
