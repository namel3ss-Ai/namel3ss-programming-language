# Application Configuration
# Copy this file to .env and configure for your environment
# NEVER commit .env to version control

# Application
APP_NAME={{ project_name }}
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database (REQUIRED)
# Format: postgresql://user:password@host:port/database
# Example: postgresql://crud_user:secure_password@localhost:5432/crud_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{ project_name | lower | replace('-', '_') }}_db

DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security & CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
API_KEY_HEADER=X-API-Key

# Multi-tenancy (optional)
ENABLE_MULTI_TENANCY=false
TENANT_HEADER=X-Tenant-ID

# OpenTelemetry (optional - for future tracing integration)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME={{ project_name }}
