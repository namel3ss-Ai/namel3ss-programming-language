"""
LLM, Tool, and Prompt Example for Namel3ss
This demonstrates the new first-class syntax for LLM providers, tools, and prompts.
"""

app "AI Demo".

# Define LLM providers
llm chat_gpt_4o:
    provider: openai
    model: gpt-4o
    temperature: 0.7
    max_tokens: 2048

llm claude_sonnet:
    provider: anthropic
    model: claude-3-5-sonnet-20241022
    temperature: 0.8
    max_tokens: 4096
    top_p: 0.9

# Define tools
tool get_weather:
    type: http
    endpoint: https://api.weather.com/v1/current
    method: GET
    timeout: 10.0

tool search_api:
    type: http
    endpoint: https://api.search.com/v1/query
    method: POST
    timeout: 15.0
    headers:
        Authorization: Bearer $SEARCH_API_KEY
        Content-Type: application/json

# Define parameterized prompts
prompt summarize:
    model: chat_gpt_4o
    template: "Summarize the following text in {max_length} words or less: {text}"

prompt classify_sentiment:
    model: claude_sonnet
    template: "Classify the sentiment of this text as positive, negative, or neutral: {text}"

prompt generate_report:
    model: chat_gpt_4o
    template: "Generate a {report_type} report about {topic}. Include sections on: {sections}"

# Simple page to demonstrate usage
page "AI Demo" at "/":
    show text "AI-Powered Application"
