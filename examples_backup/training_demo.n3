app "Training Demo".

# Minimal dataset feeding the training job.
dataset "training_data" from table training_table.

model "image_classifier" using openai:
  name: "gpt-4o-mini"
  temperature: 0.1

training "baseline":
  model: "image_classifier"
  dataset: "training_data"
  objective: "minimize_loss"
  hyperparameters:
    epochs: 2
    learning_rate: 0.01
