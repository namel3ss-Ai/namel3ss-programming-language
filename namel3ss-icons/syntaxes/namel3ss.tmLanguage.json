{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Namel3ss",
    "scopeName": "source.namel3ss",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.namel3ss",
                    "begin": "//",
                    "end": "$"
                },
                {
                    "name": "comment.block.namel3ss",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.namel3ss",
                    "match": "\\b(app|page|frame|show|widget|data|style|fn|with|at|from|to|if|else|for|while|return)\\b"
                },
                {
                    "name": "keyword.type.namel3ss",
                    "match": "\\b(text|number|bool|date|list|object)\\b"
                },
                {
                    "name": "keyword.other.namel3ss",
                    "match": "\\b(api|static|file|auth|modal|toast|chart|table|form|button)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.namel3ss",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.namel3ss",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.namel3ss",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.namel3ss",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.namel3ss",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.namel3ss",
                    "match": "(=|\\+|\\-|\\*|/|%|==|!=|<|>|<=|>=|&&|\\|\\||!)"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.name.namel3ss",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}