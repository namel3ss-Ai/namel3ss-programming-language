{
  "scopeName": "source.n3",
  "name": "N3",
  "fileTypes": [
    "n3"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.n3",
          "match": "//.*$"
        },
        {
          "name": "comment.block.n3",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.n3",
          "match": "\\b(app|page|llm|prompt|memory|frame|dataset|show|if|for|while|component)\\b"
        },
        {
          "name": "keyword.other.n3",
          "match": "\\b(text|form|field|submit|at|type|required|provider|model|temperature|max_tokens)\\b"
        },
        {
          "name": "storage.type.n3",
          "match": "\\b(string|int|float|bool|list|dict)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.n3",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.n3",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.n3",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.n3",
          "match": "[:=<>!]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.n3",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()"
        },
        {
          "name": "variable.other.n3",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}